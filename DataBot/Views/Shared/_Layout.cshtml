        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>

<body>
    <div id="header">
	    <div class="logo">DataBot</div>
    </div>
    <div id="main">
        @RenderBody()
    </div>
    <div class="clear"></div>
    <div id="footer">
        Created by <a href="http://creatingcode.com">Robert Greiner</a>.
        Source available on <a href="https://github.com/robertgreiner/DataBot">Github</a>.
    </div>
</body>
</html>
