<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <!--[if IE 7]>
	<link href="@Url.Content("~/Content/ie7fix.css")" rel="stylesheet" type="text/css" />
	<![endif]-->
    <script src="@Url.Content("~/Scripts/cufon-yui.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/custom.font.js")" type="text/javascript"></script>
    <script type="text/javascript">
    	Cufon.replace('h1, h2, .dash_title, .digit')
	</script>
    <script type="text/javascript">
        var _gaq = _gaq || [];
